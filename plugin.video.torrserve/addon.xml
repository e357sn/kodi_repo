<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.torrserve" name="TorrServer Client" version="0.0.9" provider-name="Nemiroff">
    <requires>
        <import addon="xbmc.addon" version="16.0.0" />
        <import addon="xbmc.python" version="2.24.0" />
        <import addon="script.service.torrserver" optional="true"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="navigation.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.python.module" library="resources/site-packages" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">TorrServe: Torrent video streaming</summary>
        <description lang="en">TorrServe is a torrent streaming engine. It doesn't go on torrent websites for legal reasons.</description>
        <language>en</language>
        <platform>all</platform>
        <forum></forum>
        <assets>
            <icon>icon.png</icon>
            <fanart></fanart>
        </assets>
    </extension>
</addon>
